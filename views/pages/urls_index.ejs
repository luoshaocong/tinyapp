  <body>
     <% include ../partials/_header %>
     <p>CLICK <a href="http://localhost:3000/urls/new">HERE</a> TO SHORTEN A NEW URL</p>

      <% for (var shortURL in urls) { %>
          <li><%= shortURL %>&#8594; <%= urls[shortURL].longURL %> // <b>SHORT URL:</b> <a href="http://localhost:3000/u/<%= shortURL %>">http://localhost:3000/u/<%= shortURL %></a></li><br>
